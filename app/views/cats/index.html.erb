<%= form_tag("/") do %>
  <%= text_field_tag "keyword", @keyword, :type => "search" %>
  <%= submit_tag "search", :class => "btn btn-info" %>
<% end %>

<% if @media_tag.data.size > 0 then %>
  <% @media_tag.data.each do |media| %>
    <img src="<%= media.images.thumbnail.url %>">
  <% end %>
<% else %>
  search tag : <%= @keyword %> tag did not exist.
<% end %>
